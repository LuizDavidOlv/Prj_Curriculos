@model App.Models.FormacaoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Formacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurriculoId" class="control-label"></label>
                <select asp-for="CurriculoId" class="form-control" asp-items="@(new SelectList(Model.Curriculos, "Id", "Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="CurriculoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <input asp-for="Curso" class="form-control" />
                <span asp-validation-for="Curso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label> <br />
                <input type="radio" value="1" asp-for="Status" ckecked /> Concluído <br />
                <input type="radio" value="2" asp-for="Status" /> Em Andamento <br />
                <input type="radio" value="3" asp-for="Status" /> Trancado
            </div>
            <div class="form-group">
                <label asp-for="DataConclusao" class="control-label"></label>
                <input asp-for="DataConclusao" class="form-control" />
                <span asp-validation-for="DataConclusao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
